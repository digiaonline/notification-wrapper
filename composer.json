{
    "name": "digiaonline/notification-wrapper",
    "description": "A super-basic wrapper for notifications/messages",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Stenvall",
            "email": "sam.stenvall@digia.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "phpstan/phpstan": "^0.10.6"
    },
    "autoload": {
        "psr-4": {
            "Digia\\NotificationWrapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Digia\\NotificationWrapper\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpstan analyse -l 7 src/"
        ]
    }
}
